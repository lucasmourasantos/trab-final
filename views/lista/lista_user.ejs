
<%- include ../parts/head.ejs %>

				<!-- Formulário de dacastro -->
				<div class="py-5 text-center">
	        <h2><%= title %></h2>
	      </div>

				<div class="row row_padding">
					<div class="col-md-12">
						<input class="form-control" type="text" id="myInput" onkeyup="myFunction()" placeholder="Procure por um nome..." title="Entre com um nome" style="background-image: url('images/searchicon.png'); background-position: 10px 10px; background-repeat: no-repeat; padding: 8px 20px 8px 40px;" >
					</div>
				</div>

	      <div class="row row_padding">
	        <div class="col-md-12">
						<div class="mb-3">
							<table class="table table-sm" id="myTable">
							  <thead>
							    <tr>
							      <th>Nome</th>
							      <th>Matrícula</th>
							      <th>Posto/Graduação</th>
										<th>Fone(Fixo)</th>
										<th>Celuar</th>
							    </tr>
							  </thead>
							  <tbody>
									<%docs.forEach(function(user){%>
								    <tr>
								      <td><%= user.nome %></td>
								      <td><%= user.matricula %></td>
								      <td><%= user.posto_grad %></td>
											<td><%= user.fone_fixo %></td>
								      <td><%= user.celular %></td>
											<td>
												<button type="button" class="btn btn-outline-light">
													<a href="/edit_user/<%=user._id %>"> <img src="images/png/pencil-2x.png"> </a>
												</button>
												<button type="button" class="btn btn-outline-light">
													<a href="/del_user/<%=user._id %>"
														onclick="return confirm('Tem certeza que deseja excluir?');"> <img src="images/png/trash-2x.png"> </a>
												</button>
											</td>
								    </tr>
									<% }) %>
							  </tbody>
							</table>
	          </div>
	        </div>
	      </div>

		  <footer class="footer_fixed">
					<div class="row">
					  <div class="col-12 col-md">
							<small class="">© 2017-2018</small>
					  </div>
					</div>
		  </footer>

		<%- include ../parts/footer_lista.ejs %>
